<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_height_100dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/half_standard_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sandwiches_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="top"
            android:scaleType="centerCrop"
            android:src="@drawable/test_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sandwich_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/half_half_standard_margin"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"
            tools:text="ParticleTrouble"
            tools:textColor="@color/white_color" />

    </LinearLayout>


</androidx.cardview.widget.CardView>